<%- include('partials/header'); %>
<%- include('partials/navigation'); %>

<div class="container-fluid hidden-xs">
	<div class="row">
		<div class="col-xl-10 col-xl-offset-1">
			
			<div id="bookCarousal" class="carousel slide" data-ride="carousel">
				<!-- Indicators -->
				<ol class="carousel-indicators">
					<li data-target="#bookCarousal" data-slide-to="0" class="active"></li>
					<li data-target="#bookCarousal" data-slide-to="1"></li>
					<li data-target="#bookCarousal" data-slide-to="2"></li>
					<li data-target="#bookCarousal" data-slide-to="3"></li>
				</ol>
				
				<!-- Wrapper for slides -->
				<div class="carousel-inner">
					<div class="item active">
						<img src="images/books1.jpg" alt="i" class="img">
					</div>
					
					<div class="item">
						<img src="images/books2.jpeg" alt="img3" class="img">
					</div>
					
					<div class="item">
						<img src="images/books3.jpeg" alt="img3" class="img">
					</div>
					
					<div class="item">
						<img src="images/book4.jpg" alt="img3" class="img">
					</div>
				</div>
				
				<!-- Left and right controls -->
				<a class="left carousel-control" href="#bookCarousal" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="right carousel-control" href="#bookCarousal" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
</div>
<br><br>


<!-- best sellers div start -->
<div id="best-sellers">
	<nav class="navbar navbar-default navbar-inverse ">
		<div class="container">
			<div class="navbar-header">
				<ul class="nav navbar-nav navbar-right"> 
					<li role="separator" class="vert-separator hidden-xs"></li>						
					<li class="nav-items"><a href="#" > Best Sellers </a></li>
					<li role="separator" class="vert-separator hidden-xs" ></li>
					<li  class="nav-items"><a href="#"> View All </a></li>
					<li role="separator" class="vert-separator hidden-xs"></li>
				</ul>
			</div>
		</div>
	</nav>
	
	<div class="container">
		<div class="row" style="display:flex; flex-wrap: wrap; ">
		<% books.slice(0, 4).forEach(book => { %>
			<div class="col-xs-12 col-sm-6 col-md-3">
				<div class="thumbnail">
					<img src="<%=book.book_img %>.jpg" alt="Image of  <%=book.title %>">
					<div class="caption">
						<h3><%= book.title  %></h3>
						<p><%= book.description.toString().substring(0, 100) %></p>
						<p>
							<a href="/ISBN=<%= book.ISBN13 %>" class="btn btn-primary" role="button">Read More</a> 
							<a href="#" class="btn btn-default" role="button">Price <%= book.price %></a>
						</p>
					</div>
				</div>
			</div>
		<% }) %>
			
		</div>
	</div>	
</div> <!--  best sellers div end -->

