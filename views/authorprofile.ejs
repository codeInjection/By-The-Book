<%- include('partials/header'); %>
	<%- include('partials/navigation'); %>

		<div class="container Author">
			<div class="row">
				<div class="col-md-10 col-md-offset-1">
					<div class="well well-sm profile">
						<div>

							<div class="col-md-12">
								<div class="col-md-4">
									<img src="<%= author.author_img %>">
								</div>
								<div class="col-md-8">
									<h1 id="Author">
										<%= author.name %>
									</h1>
									<p>
										<%=  author.description %>
									</p>
								</div>
							</div>




						</div>
					</div>
				</div>
			</div>
		</div>



		<div>
			<nav class="navbar navbar-default navbar-inverse ">
				<div class="container">
					<div class="navbar-header">
						<ul class="nav navbar-nav navbar-right">
							<li role="separator" class="vert-separator hidden-xs"></li>
							<li class="nav-items">
								<a href="#">All Books by
									<%=author.name%>
								</a>
							</li>
							<li role="separator" class="vert-separator hidden-xs"></li>

						</ul>
					</div>
				</div>
			</nav>

			<div class="container">
				<div class="row" style="display:flex; flex-wrap: wrap; ">
					<% books.forEach(book => { %>
						<div class="col-xs-12 col-sm-6 col-md-3">
							<div class="thumbnail">
								<img src="<%=book.book_img %>.jpg" alt="Image of  <%=book.title %>">
								<div class="caption">
									<h3>
										<%= book.title  %>
									</h3>
									<p>
										<%= book.description.toString().substring(0, 100) %>
									</p>
									<p>
										<a href="/book/ISBN=<%= book.ISBN13 %>" class="btn btn-primary" role="button">Read More</a>
										<a href="#" class="btn btn-default" role="button">Price
											<%= book.price %>
										</a>
									</p>
								</div>
							</div>
						</div>
						<% }) %>

				</div>
			</div>
		</div>








		</body>

		</html>