<%- include('partials/header'); %>
<%- include('partials/navigation'); %>

<div class="container">
	<div class="jumbotron" style="margin-top:20px">
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<div class="col-xs-12 col-sm-6 col-md-4">
					<div class="thumbnail">
						<img src="/images/blank.png" alt="Image of <%=currentUser.username%>">
					</div>
				</div>
				<div class="col-md-8">
					<h1 id="Author">
						<%= currentUser.username %>
					</h1>
					<p>
					<%= currentUser.about %>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>



	<div id="wishlist">
		<nav class="navbar navbar-default navbar-inverse ">
			<div class="container">
				<div class="navbar-header">
					<ul class="nav navbar-nav navbar-right"> 
						<li role="separator" class="vert-separator hidden-xs"></li>						
						<li class="nav-items"><a href="#" > Wish List </a></li>
						<li role="separator" class="vert-separator hidden-xs" ></li>
						
					</ul>
				</div>
			</div>
		</nav>
			
		<div class="container">
		<div class="row" style="display:flex; flex-wrap: wrap; ">


		<% if(wishlist.length > 0) { wishlist.forEach(book => { %>
			<div class="col-xs-12 col-sm-6 col-md-3">
				<div class="thumbnail">
					<img src="<%=book.book_img %>.jpg" alt="Image of  <%=book.title %>">
					<div class="caption">
						<h3><%= book.title  %></h3>
						<p><%= book.description.toString().substring(0, 100) %></p>
						<p>
							<a href="/book/ISBN=<%= book.ISBN13 %>" class="btn btn-primary" role="button">Read More</a> 
							<a href="#" class="btn btn-default" role="button">Price <%= book.price %></a>
						</p>
					</div>
				</div>
			</div>
		<% }) } else { %>
			<h1> Wishlist Empty. :( <a href="/showallbooks"> Add some books! </a>
	<% }%>
			
		</div>
	</div>
	</div>

	<div id="readlist">
		<nav class="navbar navbar-default navbar-inverse ">
			<div class="container">
				<div class="navbar-header">
					<ul class="nav navbar-nav navbar-right"> 
						<li role="separator" class="vert-separator hidden-xs"></li>						
						<li class="nav-items"><a href="#" > Read List </a></li>
						<li role="separator" class="vert-separator hidden-xs" ></li>
						
					</ul>
				</div>
			</div>
		</nav>
			
		<div class="container">
		<div class="row" style="display:flex; flex-wrap: wrap; ">


		<% if(readlist.length > 0) { readlist.forEach(book => { %>
			<div class="col-xs-12 col-sm-6 col-md-3">
				<div class="thumbnail">
					<img src="<%=book.book_img %>.jpg" alt="Image of  <%=book.title %>">
					<div class="caption">
						<h3><%= book.title  %></h3>
						<p><%= book.description.toString().substring(0, 100) %></p>
						<p>
							<a href="/book/ISBN=<%= book.ISBN13 %>" class="btn btn-primary" role="button">Read More</a> 
							<a href="#" class="btn btn-default" role="button">Price <%= book.price %></a>
						</p>
					</div>
				</div>
			</div>
		<% }) } else { %>
			<h1> Readlist Empty. :( <a href="/showallbooks"> Add some books! </a>
	<% }%>
			
		</div>
	</div>
	</div>


	<div id="favoriteauthors">
	<nav class="navbar navbar-default navbar-inverse ">
		<div class="container">
			<div class="navbar-header">
				<ul class="nav navbar-nav navbar-right"> 
					<li role="separator" class="vert-separator hidden-xs"></li>						
					<li class="nav-items"><a href="#" > Favorite Author </a></li>
					<li role="separator" class="vert-separator hidden-xs" ></li>
					
				</ul>
			</div>
		</div>
	</nav>
		
	<div class="container">
	<div class="row" style="display:flex; flex-wrap: wrap; ">


	<% if(favAuthors.length > 0) { favAuthors.forEach(author => { %>
		<div class="col-xs-12 col-sm-6 col-md-3">
			<div class="thumbnail">
				<img src="<%=author.author_img %>.jpg" alt="Image of  <%=author.name %>">
				<div class="caption">
					<h3><%= author.name  %></h3>
					<p><%= author.description.toString().substring(0, 100) %></p>
					<p>
						<a href="/author/<%= author.author_id %>" class="btn btn-primary" role="button">Read More</a> 
					</p>
				</div>
			</div>
		</div>
	<% }) } else { %>
		<h1> Favorite Authors Empty. :( <a href="/showallauthors"> Favorite Some Authors Now! </a>
<% }%>
		
	</div>
</div>
</div>

	<%- include('partials/footer'); %>